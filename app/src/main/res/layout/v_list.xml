<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#fff"
tools:context=".Controller.Controller.TGroup">


    <ImageView
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:layout_centerVertical="true"
    android:id="@+id/bt_add"
    android:layout_weight="1"
    android:src="@drawable/secrectfriendabout"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/edtPerson" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SECRET FRIEND"
        android:textColor="#1E90FF"
        android:fontFamily="serif-monospace"
        android:id="@+id/txtAplliccationName"
        android:layout_above="@+id/bt_add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SECRET FRIEND"
        android:textColor="#1E90FF"
        android:fontFamily="serif-monospace"
        android:id="@+id/txtApliccationVersion"
        android:layout_above="@+id/bt_add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/version"
        android:textColor="#1E90FF"
        android:id="@+id/textView"
        android:layout_above="@+id/bt_add"
        android:layout_centerHorizontal="true" />


</RelativeLayout>